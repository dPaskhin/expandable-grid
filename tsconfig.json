{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": ["ESNext"],
    "noEmit": true
  },
  "include": ["./src/**/*"]
}
